<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="morepeople.android.app.ChatActivity">


    <RelativeLayout
        android:USER_ID="@+USER_ID/chatHistoryLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+USER_ID/sendMessageLayout"
        android:layout_alignParentTop="false"
        android:layout_below="@+USER_ID/chat_top_bar">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:USER_ID="@+USER_ID/chat_history"
            android:stackFromBottom="true"
            android:choiceMode="none" />

    </RelativeLayout>

    <LinearLayout
        android:USER_ID="@+USER_ID/sendMessageLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:USER_ID="@+USER_ID/messageInput"
            android:editable="true"
            android:enabled="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_weight=".95" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="send"
            android:USER_ID="@+USER_ID/button_send_search"
            android:layout_weight=".05" />
    </LinearLayout>

    <RelativeLayout
        android:USER_ID="@+USER_ID/chat_top_bar"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treffen beenden"
            android:USER_ID="@+USER_ID/button_end_match"
            android:layout_gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navi starten"
            android:USER_ID="@+USER_ID/button_start_navi"
            android:layout_gravity="right"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>
